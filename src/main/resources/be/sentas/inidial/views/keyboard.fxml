<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.geometry.Insets?>
<fx:root fx:id="keyboard" spacing="10" type="VBox"
         minHeight="-Infinity" maxHeight="-Infinity"
         xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
         >
    <children>
        <HBox fx:id="firstRow" spacing="7" />
        <HBox fx:id="secondRow" spacing="7">
            <padding>
                <Insets bottom="0" top="0" right="7" left="7" />
            </padding>
        </HBox>
        <HBox fx:id="thirdRow" spacing="7">
            <padding>
                <Insets bottom="0" top="0" right="40" left="40" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="15" top="15" right="10" left="10" />
    </padding>
</fx:root>